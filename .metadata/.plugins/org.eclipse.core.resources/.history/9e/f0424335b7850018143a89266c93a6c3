import java.util.Scanner;

public class Add {
	 public static void main(String[] args) {
		 Scanner input = new Scanner(System.in);

		     int total = 0;

		

		     System.out.println("Enter the number: ");
		     int number = input.nextInt();

		     while(number != 0) {
		        total += number;
		      System.out.println("The total is "+ total);

		     }
		   }
		}